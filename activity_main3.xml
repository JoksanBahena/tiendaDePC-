<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <Button
        android:id="@+id/btnSiguiente3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Siguiente"
        app:layout_constraintEnd_toEndOf="@+id/rgProcesador"
        app:layout_constraintStart_toStartOf="@+id/rgProcesador"
        app:layout_constraintTop_toBottomOf="@+id/rgProcesador" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.208"
        app:srcCompat="@drawable/procesador" />

    <RadioGroup
        android:id="@+id/rgProcesador"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/textView2"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RadioButton
            android:id="@+id/rb2600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R5 2600 $2999" />

        <RadioButton
            android:id="@+id/rb3600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R5 3600 $3350" />

        <RadioButton
            android:id="@+id/rb3600x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R5 3600X $3899" />

        <RadioButton
            android:id="@+id/rb5600"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="R5 5600 $4700" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Â¿Que procesador?"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />
</androidx.constraintlayout.widget.ConstraintLayout>