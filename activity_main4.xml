<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity4">

    <Button
        android:id="@+id/btnSiguiente4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Finalizar compra"
        app:layout_constraintEnd_toEndOf="@+id/rgTarjeta"
        app:layout_constraintStart_toStartOf="@+id/rgTarjeta"
        app:layout_constraintTop_toBottomOf="@+id/rgTarjeta" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="200dp"
        android:layout_height="150dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.187"
        app:srcCompat="@drawable/tarjeta" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Â¿Que tarjeta grafica?"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/imageView4" />

    <RadioGroup
        android:id="@+id/rgTarjeta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/textView4"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <RadioButton
            android:id="@+id/rb1050"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GTX 1050" />

        <RadioButton
            android:id="@+id/rb1650"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GTX 1650" />

        <RadioButton
            android:id="@+id/rb2060"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RTX 2060" />

        <RadioButton
            android:id="@+id/rb2080"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RTX 2080" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>